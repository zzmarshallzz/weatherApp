	<div class="weather-app">
		<div class="temperature"><span id="temperature">0 </span>&deg; Fahrenheit</div>
		<div class="location"><span id="location">Location</span></div>

<BR>
		<form>
<input>Zip Code</input> <BR>
<button onclick="test()">Submit</button>
		</form>

	</div>

<script>
function test() {

var url = "http://api.openweathermap.org/data/2.5/weather?zip=75067&APPID=4409cc84190b23cb86522e4265e9c1bf"

	var xmlhttp = new XMLHttpRequest();
	xmlhttp.open('GET', url ,false);
	xmlhttp.send(null);

	var data = JSON.parse(xmlhttp.response);

	var temp = data.main.temp;
	var loc = data.name;
	
	
document.getElementByID("temperature").innerHTML = temp;
document.getElementByID("location").innerHTML = loc;
	

}
</script>
